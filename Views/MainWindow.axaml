<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Shop.MainWindow"
        Title="Shop">
    <Grid RowDefinitions="50 *">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="Aqua"></StackPanel>
        <Grid Grid.Row="1" ColumnDefinitions="200 *">
            <StackPanel Grid.Column="0" Orientation="Vertical" Background="Bisque">
                
            </StackPanel>
            <Border Grid.Column="1" Background="Blue" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
