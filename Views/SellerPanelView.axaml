<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:ShopDesktop.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ShopDesktop.ViewModels.SellerPanelView"
        x:DataType="vm:SellerPanelViewModel"
        Title="Seller Panel" Icon="\Assets\app_logo.png">
    <Grid>
        <!-- Ваша основная разметка страницы seller panel -->
        
        <!-- Кнопка для отображения/скрытия box добавления товара -->
        <Button Content="Add product" Command="{Binding ChangeAddProductBoxVisibility}"/>

        <!-- Box для добавления товара -->
        <Border Background="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="400" Height="300" Padding="20" Margin="20" IsVisible="{Binding IsAddProductBoxVisible}">
            <!-- Здесь разместите элементы для добавления товара -->
        </Border>
    </Grid>
</Window>
